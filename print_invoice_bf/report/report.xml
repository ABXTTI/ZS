<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_pos_invoice" model="report.paperformat">
        <field name="name">Pos Invoice</field>
        <field name="default" eval="True" />
        <field name="format">custom</field>
        <field name="page_height">210</field>
        <field name="page_width">148</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">20</field>
        <field name="margin_bottom">20</field>
        <field name="margin_left">50</field>
        <field name="margin_right">1</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>

    <record id="report_invoice_pos" model="ir.actions.report">
         <field name="name">Invoice POS</field>
         <field name="model">account.move</field>
         <field name="report_type">qweb-pdf</field>
         <field name="paperformat_id" ref="print_invoice_bf.paperformat_pos_invoice"/>
         <field name="report_name">print_invoice_bf.account_pos_template</field>
         <field name="report_file">print_invoice_bf.account_pos_template</field>
         <field name="binding_model_id" ref="model_account_move"/>
         <field name="binding_type">report</field>
    </record>
</odoo>