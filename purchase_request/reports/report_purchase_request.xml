<odoo>
    <template id="report_purchase_request">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure" />
                        <br></br>
                        <br></br>
                        <h2 style="text-align: center;">Purchase Request</h2>
                        <br></br>
                        <br></br>
                        <br></br>
<!--                      #############################################################################-->
                        <div class="row">
                            <div class="col-3" style="font-weight: bold; width: 200px;">
                                <div>Request Reference:</div>
                                <div>Creation Date:</div>
                                <div>
                                    <t t-if="o.origin">Source:</t>
                                </div>
                                <div>Description:</div>
                            </div>
                            <div class="col-xs-3" style="width: 200px;">
                                <div><span t-field="o.name"/></div>
                                <div><span t-field="o.date_start"/></div>
                                <div><span t-field="o.origin"/></div>
                                <div><span t-field="o.description"/></div>
                            </div>
                            <div class="col-xs-3 offset-2" style="font-weight: bold; width: 150px;">
                                <div>Requested by:</div>
                                <div>Assigned to:</div>
                                <div>Picking Type:</div>
                            </div>
                            <div class="col-xs-3" style="width: 200px;">
                                <div><span t-field="o.requested_by"/></div>
                                <div><span t-field="o.assigned_to"/></div>
                                <div><span t-field="o.picking_type_id"/></div>
                            </div>
                        </div>

                        <br></br>
                        <br></br>
                        <br></br>
<!--                        ########################################################################-->
                        <t t-if="o.line_ids">
                            <h3>Products</h3>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>
                                            <strong>Description</strong>
                                        </th>
                                        <th groups="analytic.group_analytic_accounting">
                                            <strong>Analytic Account</strong>
                                        </th>
                                        <th class="text-right">
                                            <strong>Qty</strong>
                                        </th>
                                        <th class="text-center" groups="uom.group_uom">
                                            <strong>Product UoM</strong>
                                        </th>
                                        <th>
                                            <strong>Estimated Cost</strong>
                                        </th>
                                        <th class="text-right">
                                            <strong>Requested Date</strong>
                                        </th>
                                        <th>
                                            <strong>Specifications</strong>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.line_ids" t-as="line_ids">
                                        <td>
                                            <span t-field="line_ids.name" />
                                        </td>
                                        <td groups="analytic.group_analytic_accounting">
                                            <span
                                                t-field="line_ids.analytic_account_id"
                                            />
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line_ids.product_qty" />
                                        </td>
                                        <t>
                                            <td
                                                class="text-center"
                                                groups="uom.group_uom"
                                            >
                                                <span
                                                    t-field="line_ids.product_uom_id.name"
                                                />
                                            </td>
                                        </t>
                                        <td>
                                            <span t-field="line_ids.estimated_cost" />
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line_ids.date_required" />
                                        </td>
                                        <td>
                                            <span t-field="line_ids.specifications" />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </t>
                        <div class="oe_structure" />
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
