<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="inherit_hr_employee" model="ir.ui.view">
		<field name="name">inherit_hr_employee</field>
		<field name="model">hr.employee</field>
		<field name="inherit_id" ref="hr.view_employee_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='user_id']" position="after">
				<field name="date_of_joining" required="1"/>
				<field name="annual_leaves_allocation_dt" invisible="1"/>				
				<field name="leave_encashment" />
			</xpath>
		</field>
	</record>

</odoo>