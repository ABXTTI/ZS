<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="inherit_hr_employee" model="ir.ui.view">
		<field name="name">inherit_hr_employee</field>
		<field name="model">hr.employee</field>
		<field name="inherit_id" ref="hr.view_employee_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='user_id']" position="after">
				<field name="date_of_joining" required="1" />
				<field name="annual_leaves_allocation_dt" invisible="1" />
				<field name="leave_encashment" />
			</xpath>
		</field>
	</record>

	<record id="inherit_hr_leave_from_leaves_approver" model="ir.ui.view">
		<field name="name">inherit_hr_leaves_leaves_approver</field>
		<field name="model">hr.leave</field>
		<field name="inherit_id" ref="hr_holidays.hr_leave_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//button[@name='action_approve']" position="replace">
				<button string="Approve" groups="leave_enhancements.group_leaves_approver" name="action_approve" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('can_approve', '=', False), ('state', '!=', 'confirm')]}" />
			</xpath>
			<xpath expr="//button[@name='action_refuse']" position="replace">
				<button string="Refuse" groups="leave_enhancements.group_leaves_approver" name="action_refuse" type="object" attrs="{'invisible': ['|', ('can_approve', '=', False), ('state', 'not in', ('confirm','validate','validate1'))]}" />
			</xpath>
			<xpath expr="//button[@name='action_draft']" position="replace">
				<button string="Reset to Draft" groups="leave_enhancements.group_leaves_approver" name="action_draft" type="object" attrs="{'invisible': ['|', ('can_reset', '=', False), ('state', 'not in', ['confirm', 'refuse'])]}" />
			</xpath>
		</field>
	</record>

</odoo>