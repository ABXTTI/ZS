<odoo>
    <record id="payroll_report_xlsx_wizard" model="ir.ui.view">
        <field name="name">payroll.report.xlsx.wizard</field>
        <field name="model">payroll.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                <footer>
<!--                        <button string="test Print Attendance" type="object" name="print_attendance"/>-->
                    <button string="Print" type="object" name="print_xlsx"/>
                    <button string="Cancel" special="cancel" class="btn btn-secondary"/>
                </footer>
                </group>
            </form>
        </field>
    </record>

    <record id="payroll_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Payroll Report Xlsx Action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">payroll.report.wizard</field>
        <field name="view_mode">form</field>
            <field name="target">new</field>
    </record>
    <menuitem name="Payroll Report" id="Payroll_report_menu" parent="hr_payslip_monthly_report.menu_hr_payslip_reports"
              action="payroll_report_wizard_action"/>
</odoo>
