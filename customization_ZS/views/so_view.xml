<!--            </xpath>-->

            <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="x_image" widget="image" class="oe_avatar"/>
            </xpath>

            
<!--            <xpath expr="//group[@name='g1']" position="before">-->
