<!--                    </group>-->
<!--                </group>-->
<!--            </xpath>-->

<!--            <xpath expr="//tree/field[@name='product_id']" position="before">-->
<!--                <field name="i_description"/>-->
<!--                <field name="i_city"/>-->
<!--            </xpath>-->
            <xpath expr="//tree/field[@name='product_uom_qty']" position="before">

                    <field name="x_color"/>
                    <field name="x_actual_color"/>
                    <field name="x_weight"/>
                    <field name="x_gadje"/>
                    <field name="x_productionprocessdate"/>
                    <field name="x_small"/>
                    <field name="x_medium"/>
                    <field name="x_large"/>
                    <field name="x_xl"/>
            </xpath>
            <xpath expr="//tree/field[@name='product_uom_qty']" position="after">
                    <field name="x_comments"/>
                    <field name="x_shippedby"/>
            </xpath>

            <xpath expr="//tree/field[@name='name']" position="after">
