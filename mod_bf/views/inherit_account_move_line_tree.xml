<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="view_account_move_line_inherit_tree" model="ir.ui.view">
        <field name="name">view.account.move.line.inherit.tree</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree_grouped_general" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='credit']" position="after">
                <field name="net_balance" sum="Total Net" optional="hide"/>
                <field name="net_balance2" sum="Total Net"/>
            </xpath>
        </field>
    </record>
    <record id="view_account_move_line_inherit_tree_partner_ledger" model="ir.ui.view">
        <field name="name">view.account.move.line.inherit.tree.partner.ledger</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree_grouped_partner" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="default_order">create_date</attribute>
            </xpath>
            <xpath expr="//field[@name='credit']" position="after">
                <field name="net_balance" sum="Total Net" optional="hide"/>
                <field name="net_balance2" sum="Total Net"/>
                <field name="cumulated_balance"/>
            </xpath>
            <xpath expr="//field[@name='date']" position="before">
                <field name="create_date" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='account_id']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='full_reconcile_id']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
        </field>
    </record>
</odoo>