<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="view_account_move_inherit_form" model="ir.ui.view">
        <field name="name">view.account.move.inherit.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_reverse_check" string="Reversal" type="object" attrs="{'invisible':[('state', '=', 'draft')]}" confirm="Are you sure you want to do?"/>
                <button name="clear_list_products" string="Clear Products" type="object" attrs="{'invisible':[('state', '!=', 'draft')]}" confirm="Are you sure you want to do?"/>
            </xpath>
            <xpath expr="//button[@name='button_draft']" position="attributes">
                <attribute name="confirm">"Are you sure you want to do?"</attribute>
            </xpath>
            <xpath expr="//sheet/group" position="before">
                <group>
                    <group>
                        <field name="customer_id_generated" required="True" options="{'no_create_edit':True, 'no_create':True}" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                        <field name="customer_code" required="True" options="{'no_create_edit':True, 'no_create':True}" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//field[@name='ref']" position="after">
                <field name="previous_balance" readonly="1" force_save="1"/>
                <field name="current_balance" readonly="1" force_save="1"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="options">{'no_create_edit':True, 'no_create':True}</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='account_id']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='tax_ids']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='quantity']" position="attributes">
                <attribute name="sum">Total Qty.</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='price_subtotal']" position="attributes">
                <attribute name="sum">Total Amount</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_date']" position="attributes">
                <attribute name="groups">sales_team.group_sale_salesman</attribute>
            </xpath>
            <xpath expr="//field[@name='journal_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='credit']" position="after">
                <field name="net_balance" sum="total_net" optional="hide"/>
                <field name="net_balance2" sum="total_net"/>
            </xpath>
        </field>
    </record>
</odoo>